{
  "name": "la-esquina-pos",
  "version": "1.0.0",
  "description": "Sistema de Control para Billar",
  "main": "main-desktop.js",
  "scripts": {
    "start": "node server.js",
    "test-pc": "electron .",
    "build-pc": "electron-builder"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "connect-pg-simple": "^9.0.1",
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.laesquina.pos",
    "productName": "La Esquina",
    "directories": {
      "output": "instalador-final"
    },
    "win": {
      "target": "nsis",
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
